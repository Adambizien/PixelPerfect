---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  imageAlt: string;
  imagePosition?: 'left' | 'right';
}

const {
  title,
  description,
  image,
  imageAlt,
  imagePosition = 'right',
} = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-6">
    <div class={`flex flex-col md:flex-row items-center ${imagePosition === 'left' ? 'md:flex-row-reverse' : ''}`}>
      <div class="md:w-1/2 mb-10 md:mb-0 md:px-6">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">{title}</h2>
        <p class="text-gray-600 mb-4">
          {description}
        </p>
      </div>
      <div class="md:w-1/2">
        <Image
          src={image}
          alt={imageAlt}
          width={600}
          height={400}
          class="rounded-lg shadow-xl object-cover mx-auto"
          loading="lazy"
          sizes="(max-width: 768px) 100vw, 50vw"
        />
      </div>
    </div>
  </div>
</section>