---
const { title, subtitle, linkServicesText, linkServices, linkContact, linkContactText, image } = Astro.props;
import { Image } from 'astro:assets';
---

<div class="bg-gradient-to-br from-indigo-900 to-purple-800 relative overflow-hidden">
    <div class="absolute top-0 left-0 w-40 h-40 bg-indigo-500 rounded-full mix-blend-screen opacity-20 transform -translate-x-12 translate-y-12"></div>
    
    <div class="max-w-screen-xl mx-auto px-6 sm:px-8 py-12 sm:py-16 lg:py-24 xl:py-28">
        <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
            <div class={`${image ? 'lg:w-1/2' : 'lg:w-full'} text-center lg:text-left z-10`}>
                <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-6xl xl:text-7xl font-bold text-white !leading-tight">
                    {title}
                </h1>
                
                <div class="max-w-md md:max-w-2xl mx-auto lg:mx-0 mt-4 sm:mt-6">
                    <p class="text-lg sm:text-xl text-slate-300 leading-relaxed">
                        {subtitle}
                    </p>
                </div>

                <div class="mt-8 sm:mt-12 flex flex-wrap justify-center lg:justify-start gap-4 sm:gap-6">
                    {linkServices && linkServicesText && (
                        <a href={linkServices} class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 font-medium text-sm sm:text-base tracking-wide rounded-full text-indigo-500 bg-white hover:bg-gray-100 transition">
                            {linkServicesText}
                        </a>
                    )}    
                    {linkContact && linkContactText && (
                        <a href={linkContact} class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 font-medium text-sm sm:text-base tracking-wide rounded-full text-white bg-indigo-500 hover:bg-indigo-600 transition">
                            {linkContactText}
                        </a>
                    )} 
                    
                </div>
            </div>

           {image && (
                <div class="lg:w-1/2 mt-8 lg:mt-0 relative">
                    <Image
                        src={image}
                        alt="Hero Image"
                        class="w-full max-w-lg mx-auto lg:max-w-none rounded-lg shadow-xl object-cover"
                        loading="lazy"
                        width={800}
                        height={600}
                        sizes="(max-width: 1024px) 100vw, 50vw"
                    />
                </div>
            )}
        </div>
    </div>
</div>