---
import ValueCard from './ValueCard.astro';

interface Value {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  title?: string;
  values: Value[];
  backgroundColor?: 'gray' | 'white';
}

const {
  title = "Nos Valeurs",
  values,
  backgroundColor = 'gray'
} = Astro.props;
---

<section class={`py-16 bg-${backgroundColor}-50`}>
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-12">{title}</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {values.map((value) => (
        <ValueCard 
          title={value.title} 
          icon={value.icon}
          description={value.description}
        />
      ))}
    </div>
  </div>
</section>