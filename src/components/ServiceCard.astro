---
const { title, description, icon } = Astro.props;
---
<div class="group relative overflow-hidden rounded-2xl bg-white shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-1 h-full border border-gray-100">
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-purple-50 opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-0"></div>
  
  <div class="relative z-10 p-8 h-full flex flex-col items-center text-center">
    <div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-blue-100 to-purple-100 text-blue-600 flex items-center justify-center text-3xl mb-6 transition-all duration-500 group-hover:from-blue-200 group-hover:to-purple-200 group-hover:text-blue-700 group-hover:rotate-6 group-hover:scale-110">
      {icon}
    </div>
    
    <h3 class="text-xl font-bold mb-4 text-gray-800 relative inline-block">
      {title}
      <span class="absolute bottom-0 left-0 w-0 h-1 bg-blue-500 transition-all duration-500 group-hover:w-full"></span>
    </h3>
    
    <p class="text-gray-600 group-hover:text-gray-700 transition-colors duration-300 flex-grow">
      {description}
    </p>
    
    <div class="mt-6 opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 transition-all duration-300">
      <span class="inline-flex items-center text-blue-600 font-medium text-sm">
        En savoir plus
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </span>
    </div>
  </div>
</div>