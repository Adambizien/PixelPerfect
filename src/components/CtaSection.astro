---
const { title, description, ctaText, ctaLink } = Astro.props;
---
<section class="relative py-16 md:py-24 px-4 sm:px-6 overflow-hidden">

  <div class="absolute inset-0 bg-gradient-to-br from-indigo-900 to-purple-800 opacity-95"></div>
  <div class="absolute top-0 right-0 w-20 h-20 md:w-32 md:h-32 bg-purple-600 rounded-full mix-blend-screen opacity-20 transform translate-x-6 -translate-y-6 md:translate-x-12 md:-translate-y-12"></div>
  <div class="absolute bottom-0 left-0 w-24 h-24 md:w-40 md:h-40 bg-indigo-500 rounded-full mix-blend-screen opacity-20 transform -translate-x-6 translate-y-6 md:-translate-x-12 md:translate-y-12"></div>


  <div class="relative max-w-5xl mx-auto text-center">

    <h2 class="text-3xl sm:text-4xl md:text-5xl font-extrabold mb-6 md:mb-8 bg-clip-text text-transparent bg-gradient-to-r from-white to-blue-100 leading-tight">
      {title}
    </h2>

    <p class="text-base sm:text-lg md:text-xl text-blue-100 max-w-3xl mx-auto mb-8 md:mb-12 leading-relaxed px-2 sm:px-0">
      {description}
    </p>
    
    <div class="group relative inline-block">
      <div class="absolute inset-0 bg-white rounded-xl transform group-hover:scale-105 transition-all duration-300 opacity-10 -z-10"></div>
      <a 
        href={ctaLink} 
        class="relative inline-flex items-center justify-center px-8 py-3 sm:px-10 sm:py-3 md:px-12 md:py-4 text-sm sm:text-base md:text-lg font-semibold text-white bg-gradient-to-r from-blue-400 to-indigo-500 rounded-xl hover:from-blue-300 hover:to-indigo-400 transition-all duration-300 transform group-hover:-translate-y-1 shadow-lg hover:shadow-2xl border-2 border-white border-opacity-20"
      >
        {ctaText}
        <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 sm:ml-3 w-4 h-4 sm:w-5 sm:h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </div>
  </div>
</section>