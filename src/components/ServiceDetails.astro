---
const { services } = Astro.props;
---
<section class="py-10 px-4 max-w-6xl mx-auto">
  {services.map((service) => (
    <article id={service.id} class="mb-28 scroll-mt-24">
      <div class="flex flex-col md:flex-row gap-8 mb-12">
        <div class="md:w-1/2">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{service.title}</h2>
          <p class="text-xl text-gray-600">{service.summary}</p>
        </div>
        
        <div class="md:w-1/2 bg-gray-50 p-6 rounded-lg">
          <div class="flex flex-wrap gap-4">
            {service.results.map((result) => (
              <div class="bg-white p-4 rounded shadow-xs text-center min-w-[120px] flex-1">
                <p class="text-2xl font-bold text-blue-600">{result.value}</p>
                <p class="text-sm text-gray-600">{result.label}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="md:col-span-2 space-y-8">
          <div class="prose max-w-none [&_ul]:list-disc [&_ul]:pl-6 [&_ul]:my-4 [&_li]:mb-2">
            <Fragment set:html={service.description} />
          </div>

          <div class="space-y-4">
            {service.technologies && (
              <div>
                <h3 class="font-semibold text-lg text-gray-900 mb-3">Technologies cl√©s :</h3>
                <div class="flex flex-wrap gap-2">
                  {service.technologies.map((tech) => (
                    <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            )}

            {service.deliverables && (
              <div>
                <h3 class="font-semibold text-lg text-gray-900 mb-3">Livrables :</h3>
                <div class="flex flex-wrap gap-2">
                  {service.deliverables.map((item) => (
                    <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-medium">
                      {item}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>

        <div class="space-y-6">
          <div class="bg-gray-50 p-6 rounded-lg sticky top-6">
            <h3 class="font-semibold text-lg text-center text-gray-900 mb-6">Notre Processus</h3>
            
            <div class="space-y-4">
              {service.process.map((step) => (
                <div class="flex items-start gap-3">
                  <span class="text-2xl flex-shrink-0 mt-0.5">{step.icon}</span>
                  <div>
                    <p class="font-medium text-gray-900">{step.title}</p>
                    <p class="text-sm text-gray-600">{step.detail}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </article>
  ))}
</section>